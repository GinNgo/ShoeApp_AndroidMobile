<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:clipToPadding="false"
    android:layout_marginBottom="12dp">

    <!-- Product Image -->
    <ImageView
        android:id="@+id/image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_shoes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="Product image" />

    <!-- Right side content -->
    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintStart_toEndOf="@id/image"
        app:layout_constraintTop_toTopOf="@id/image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/image">

        <!-- Product Name -->
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Suga Leather Shoes"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Color | Size | Qty -->
        <TextView
            android:id="@+id/tvOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color | Size = 40 | Qty = 1"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginTop="4dp"/>

        <!-- In Delivery tag -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:text="In Delivery"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:background="@drawable/bg_status_tag"/>

        <!-- Price + Track Order Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="$375.00"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>

            <Button
                android:id="@+id/btnTrackOrder"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:paddingHorizontal="16dp"
                android:text="Track Order"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/black"
                android:textSize="14sp"
                android:layout_marginStart="8dp"/>

            <Button
                android:id="@+id/btnLeaveReview"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:paddingHorizontal="16dp"
                android:text="Leave Review"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/black"
                android:textSize="14sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.admin.product.AdminProductActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarProduct"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Quản lý sản phẩm"
        app:titleCentered="true"
        app:navigationIcon="@drawable/ic_arrow_back"

        style="@style/Widget.MaterialComponents.Toolbar.Primary" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerProduct"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        tools:listitem="@layout/item_admin_product" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end" android:layout_margin="16dp"
        app:srcCompat="@drawable/ic_add"
        android:contentDescription="Thêm sản phẩm" />
</LinearLayout>
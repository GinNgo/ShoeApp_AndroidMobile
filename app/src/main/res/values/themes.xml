<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ShoesApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.ShoesApp" parent="Base.Theme.ShoesApp" />
    <style name="ShapeAppearance.App.CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> </style>
    <style name="AdminStatsCard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item> <item name="android:layout_columnWeight">1</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#F0F0F0</item>
    </style>

    <style name="AdminStatsLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="AdminStatsLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="AdminStatsValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item> <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="AdminActionCard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">6dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="AdminActionLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="AdminActionIcon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="AdminActionLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="AdminActionDesc">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>
</resources>
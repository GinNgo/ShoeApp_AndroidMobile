<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gray background -->
    <solid android:color="#F2F2F2" />   <!-- pick your gray shade -->

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Optional: padding inside -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />

</shape>

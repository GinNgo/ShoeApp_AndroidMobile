<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Nền -->
    <solid android:color="#E7E7E7" />  <!-- màu nền nhạt -->

    <!-- Viền -->
    <stroke
        android:width="2dp"
        android:color="#E7E7E7" />      <!-- viền đỏ đậm -->

    <!-- Bo góc -->
    <corners android:radius="16dp" />  <!-- bo tròn -->

    <!-- Padding bên trong -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />
</shape>
